menuconfig KCONFIG_MODULE_ISBD
    bool "Configure Iridium SBD Sat Modem Driver"
    depends on HAS_PERIPH_GPIO
    depends on HAS_PERIPH_GPIO_IRQ
    depends on HAS_PERIPH_UART
    select MODULE_PERIPH_GPIO
    select MODULE_PERIPH_GPIO_IRQ
    select MODULE_PERIPH_UART
    select MODULE_FMT
    select MODULE_IOLIST
    select MODULE_AT
    help
        Configure the ISBD driver using Kconfig.

if KCONFIG_USEMODULE_ISBD

config ISBD_SBD_SESSION_TIMEOUT
    int "Default command timeout in sec"
    default 15
    help
        Default command timeout in sec in seconds to wait for a 
        response of the AT+SBDIX[A] command.

endif # KCONFIG_USEMODULE_ISBD
